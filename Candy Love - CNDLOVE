// https://www.codechef.com/problems/CNDLOVE

#include <bits/stdc++.h>
using namespace std;

int main() {
	int t, n;
	cin >> t;
	while(t--) {
	     cin >> n;
	     int a[n], i;
	     float k, sum = 0.0;
	     for(i = 0; i < n; i++) {
	              cin >> a[i];
	              sum = sum + a[i];
	     }
	     k=sum / 2;
	     if(ceil(k) - floor(k) == 1)
	       cout << "YES" << endl;
	     else
	       cout << "NO" << endl;
	}
	return 0;
}
